{
  "name": "card-builder",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "dist/electron.js",
  "build": {
    "appId": "com.jasonpeinko.card-builder",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "hookrouter": "^1.2.3",
    "react": "^16.10.2",
    "react-color": "^2.17.3",
    "react-dom": "^16.10.2",
    "react-form-hook": "^0.0.1",
    "react-hook-form": "^3.23.18",
    "react-scripts": "3.2.0",
    "react-select": "^3.0.8",
    "typescript": "^3.6.3"
  },
  "devDependencies": {
    "@types/hookrouter": "^2.2.1",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.12",
    "@types/react": "16.9.5",
    "@types/react-color": "^3.0.1",
    "@types/react-dom": "16.9.1",
    "@types/react-select": "^3.0.5",
    "concurrently": "^5.0.0",
    "electron": "^6.0.12",
    "electron-builder": "^21.2.0",
    "node-sass": "^4.12.0",
    "wait-on": "^3.3.0"
  },
  "scripts": {
    "start": "BROWSER=none PORT=3333 react-scripts start",
    "electron": "tsc -p tsconfig-electron.json && electron --force-device-scale-factor=1.5 ./build/electron.js",
    "build": "react-scripts build",
    "build:electron": "tsc -p tsconfig-electron.json",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "predist": "yarn build && yarn build:electron",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
